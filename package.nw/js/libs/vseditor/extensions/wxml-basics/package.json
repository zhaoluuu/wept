{
	"name": "wxml",
	"displayName": "%displayName%",
	"description": "%description%",
	"version": "1.0.0",
	"publisher": "wechat.miniprogram",
	"license": "MIT",
	"engines": { "vscode": "*" },
	"contributes": {
		"languages": [{
			"id": "wxml",
			"extensions": [
				".wxml"
			],
			"aliases": [ "WXML", "wxml" ],
			"configuration": "./wxml.language-configuration.json"
		}],
		"grammars": [
		{
			"scopeName": "text.html.basic",
			"path": "./syntaxes/wxml.tmLanguage.json",
			"embeddedLanguages": {
			  "text.html": "html",
			  "source.js": "javascript"

			},
			"tokenTypes": {
			  "meta.tag string.quoted": "other"
			}
		  },
		  {
			"language": "wxml",
			"scopeName": "text.html.derivative",
			"path": "./syntaxes/wxml-derivative.tmLanguage.json",
			"embeddedLanguages": {
			  "text.html": "html",
			  "source.js": "javascript"
			},
			"tokenTypes": {
			  "meta.tag string.quoted": "other"
			}
		  }
	
	]
	},
	"scripts": {
		"update-grammar": "node ../../build/npm/update-grammar.js atom/language-xml grammars/xml.cson ./syntaxes/xml.tmLanguage.json grammars/xsl.cson ./syntaxes/xsl.tmLanguage.json"
	}
}
